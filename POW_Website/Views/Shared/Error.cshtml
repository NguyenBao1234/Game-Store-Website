@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div class="d-flex align-items-center justify-content-center vh-100" style="background-color: #000; color: #eee; font-family: 'Josefin Sans', sans-serif;">
    
    <div class="text-center p-5 border border-danger rounded-0" style="max-width: 500px; width: 90%; background-color: #1a1a1a;">

        <i class="bi bi-x-octagon-fill text-danger mb-4" style="font-size: 4rem;"></i>

        <h1 class="text-danger fw-bold mb-3" style="font-size: 2.5rem;">
            Lỗi @ViewBag.ErrorCode!
        </h1>

        <h2 class="text-light mb-4" style="font-size: 1.2rem;">
            @ViewBag.Message
        </h2>
        
        <p class="text-muted small">
            Đã xảy ra lỗi trong quá trình xử lý yêu cầu của bạn.
        </p>

        @if (Model.ShowRequestId)
        {
            <div class="mt-3 p-2 bg-dark rounded-0 border border-secondary text-start mx-auto" style="max-width: 300px;">
                <p class="mb-1 small">
                    <strong class="text-warning">Mã yêu cầu (ID):</strong> 
                </p>
                <code class="text-light">@Model.RequestId</code>
            </div>
        }
        
        <hr class="border-danger my-4">

        <div class="d-flex justify-content-center gap-3">
            <a onclick="history.back()" class="btn btn-outline-light px-4 rounded-0">
                ← Quay lại
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-light px-4 rounded-0">
                Về Trang chủ
            </a>
        </div>
        
    </div>
</div>