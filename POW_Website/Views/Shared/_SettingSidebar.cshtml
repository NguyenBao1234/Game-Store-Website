@{
    ViewBag.Title = "title";
}

<h3 class="sidebar-title">Account</h3>
<ul class="sidebar-menu">
    <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")">
        <a asp-controller="Account" asp-action="Profile" class="option-item-btn">Profile</a>
    </li>
    @* <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "LinkedAccounts" ? "active" : "")"> *@
    @*     <a asp-controller="Account" asp-action="LinkedAccounts" class="menu-item-button">Linked accounts</a> *@
    @* </li> *@
    <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Security" ? "active" : "")">
        <a asp-controller="Account" asp-action="Security" class="option-item-btn">Password &amp; Security</a>
    </li>
</ul>

<h3 class="sidebar-title mt">Payment</h3>
<ul class="sidebar-menu">
    <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "PaymentSettings" ? "active" : "")">
        <a asp-controller="Account" asp-action="PaymentSettings" class="option-item-btn">Payment settings</a>
    </li>
    <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Order" ? "active" : "")">
        <a asp-controller="Account" asp-action="Order" class="option-item-btn">Transactions</a>
    </li>
    <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "RedeemCode" ? "active" : "")">
        <a asp-controller="Account" asp-action="RedeemCode" class="option-item-btn">Redeem code</a>
    </li>
</ul>

<style>

    /* Trạng thái Active - Thêm đoạn này */
    .sidebar-menu li.active .option-item-btn {
        color: #1a1a1a; /* Ví dụ: màu tối trên nền cam sẽ dễ đọc hơn */
        font-weight: 600;
    }

    /* Nếu li.active của bạn đang quy định màu nền cam, hãy đảm bảo nó trông như thế này */
    .sidebar-menu li.active {
        background-color: #ffaa00; /* Màu cam như trong hình của bạn */
        border-radius: 8px;
    }
</style>