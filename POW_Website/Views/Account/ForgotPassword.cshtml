@model POWStudio.Models.ViewModels.ForgotPassModel

@{
    Layout = null;
    ViewData["Tittle"] = "ForgotPassword";
}

<!DOCTYPE html>

<html lang="es">
<head>
    <title>@ViewData["Tittle"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/auth-style.css" asp-append-version="true"/>
    <link rel="icon" type="image/png" sizes="256x256" href="~/Image/Logo/POW_Logo_Transparent_Small.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;700&display=swap" rel="stylesheet">

</head>


<body>
    <div class="auth-overlay">
        <div class="auth-card shadow-2xl">
            
            @if(!Model.bSuccess)
            {
                <div class="auth-header text-center">
                    <img src="/Image/Logo/POW_Logo_Transparent_Small.png" alt="Logo" style="width: 80px; margin-bottom: 20px;">
                    <h1>Reset Password</h1>
                    <p class="text-white-50 small">Enter your email address to receive the recovery link.</p>
                </div>

                <form id="forgotPasswordForm" asp-controller="Account" asp-action="ForgotPassword" method="post">
                    <div class="form-floating mb-4">
                        <input asp-for="Email" class="form-control" autocomplete="off" aria-required="false" placeholder="name@example.com"/>
                        <label asp-for="Email">Email Address</label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center gap-3 mt-5">
                        <button type="button" onclick="history.back()" class="btn btn-auth-secondary btn-lg w-50">
                            ‚Üê BACK
                        </button>
                        <button type="submit" class="btn btn-auth-main btn-lg w-50">
                            SUBMIT
                        </button>
                    </div>
                </form> 
                <div asp-validation-summary="All" class ="text-danger mt-3 small"></div>
            }
            else
            {
                <div class="text-center py-4">
                    <div class="mb-4">
                        <i class="bi bi-envelope-check" style="font-size: 4rem; color: #ffcc00;"></i>
                    </div>
                    <h2 class="h4 fw-bold mb-3" style="color: #ffcc00; letter-spacing: 1px;">
                        EMAIL SENT SUCCESSFULLY
                    </h2>
                    <p class="text-white-50 mb-5">
                        Please check your inbox (or spam folder) to continue changing your password.
                    </p>

                    <div class="d-flex flex-column gap-3">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-auth-main py-2">LOG IN NOW</a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-auth-secondary py-2">RETURN HOME</a>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>