@model POWStudio.Models.ViewModels.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/auth-style.css" asp-append-version="true"/>
    <link rel="icon" type="image/png" sizes="256x256" href="~/Image/Logo/POW_Logo_Transparent_Small.png">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;700&display=swap" rel="stylesheet">

    <style>
        body, html {
            height: 100%;
            font-family: 'Josefin Sans', sans-serif;
            background-color: #000;
            margin: 0;
        }
    </style>
</head>

<body>
<div class="auth-overlay">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="auth-card shadow-2xl">
            <div class="auth-header text-center">
                <img src="/Image/Logo/POW_Logo_Transparent_Small.png" alt="Logo" style="width: 80px; margin-bottom: 20px;">
                <h1>@ViewData["Title"]</h1>
            </div>

            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="form-floating mb-4">
                    <input asp-for="Email" class="form-control" placeholder="Email@example.com" autocomplete="off" aria-required="false"/>
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                    <label asp-for="Password">Password</label>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input"/>
                        <label class="form-check-label small text-white-50">Remember me</label>
                    </div>
                    <a asp-action="ForgotPassword" class="auth-link">Forgot?</a>
                </div>

                <div class="d-flex gap-3">
                    <button type="button" onclick="history.back()" class="btn btn-auth-secondary w-50 py-2">BACK</button>
                    <button type="submit" class="btn btn-auth-main w-50 py-2">LOGIN</button>
                </div>

                <div class="text-center mt-4">
                    <span class="text-white-50 small">Don't have an account?</span>
                    <a asp-action="Register" class="auth-link fw-bold ms-1">Register</a>
                </div>
            </form>
            
            <div asp-validation-summary="All" class="text-danger mt-3 small"></div>
        </div>
    </div>
</div>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>