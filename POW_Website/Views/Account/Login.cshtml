@model POWStudio.Models.ViewModels.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="icon" type="image/png" sizes="256x256" href="~/Image/Logo/POW_Logo_Transparent_Small.png">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Josefin Sans', sans-serif;
        }
        .form-control,
        .btn,
        label {
            font-family: 'Josefin Sans', sans-serif !important;
        }
    </style>
</head>

<body>
    <div class="position-relative d-flex justify-content-center align-items-center vh-100 overflow-hidden">

        <div class="position-absolute top-0 start-0 w-100 h-100" id="overlayYTB" style="z-index: 1;transition: opacity 2s ease;opacity: 1;pointer-events: none;overflow: hidden;">
            <img src="/Image/Other/ThapRuaHN.jpg"alt="Ảnh phủ"style="width: 100%; height: 100%; object-fit: cover; object-position: center;">
        </div>
        
        <div class="card shadow-lg p-4 rounded-0"  style="max-width: 680px; width: 100%; border-radius: 1rem; background-color: rgba(255,255,255,0.9);z-index: 1">
            <h1 class="text-center mb-4">Đăng nhập</h1>
            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="form-floating mb-3 rounded-0">
                    <input asp-for="Email" class="form-control" autocomplete="off" aria-required="false" placeholder="name@example.com"/>
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3 rounded-0">
                    <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Mật khẩu"/>
                    <label asp-for="Password">Mật khẩu</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <input asp-for="RememberMe" class ="form-check-input"/>
                    <label>Remember Login</label>
                </div>
                <div class="d-flex justify-content-between align-items-center gap-2 mt-4">
                    <!--Back -->
                    <button type="button" onclick="history.back()" class="btn btn-outline-dark btn-lg w-50 rounded-0">
                        ← Back
                    </button>
                    <!--Login -->
                    <button type="submit" class="btn btn-dark btn-lg w-50 rounded-0">
                        Login
                    </button>
                </div>
                
                <div class="d-flex justify-content-center mt-3">
                    <a asp-controller="Account" asp-action="Register" >Register</a>
                    <div class="vr mx-2"></div>
                    <a asp-controller="Account" asp-action="ForgotPassword" >Forgot Password?</a>
                </div>
            </form>
            
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>