@model POWStudio.Models.ViewModels.ResetPassModel

@{
    Layout = null;
    ViewData["Title"] = "Reset Password";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/auth-style.css" asp-append-version="true"/>
    <link rel="icon" type="image/png" sizes="256x256" href="~/Image/Logo/POW_Logo_Transparent_Small.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Josefin Sans', sans-serif;
        }
        .form-control,
        .btn,
        label {
            font-family: 'Josefin Sans', sans-serif !important;
        }
    </style>
</head>
<body>
    <div class="auth-overlay">
        <div class="auth-card shadow-2xl">
            @if (!Model.bSuccess)
            {
                <div class="auth-header text-center">
                    <img src="/Image/Logo/POW_Logo_Transparent_Small.png" alt="Logo" style="width: 80px; margin-bottom: 20px;">
                    <h1>Reset Password</h1>
                    <p class="text-white-50 small">Set a new password for your account.</p>
                </div>

                <form method="post">
                    <input type="hidden" asp-for="UserId"/>
                    <input type="hidden" asp-for="Token"/>

                    <div class="form-floating mb-4">
                        <input asp-for="Email" class="form-control" style="opacity: 0.7; cursor: not-allowed;" readonly/>
                        <label asp-for="Email">Email</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Mật khẩu mới"/>
                        <label asp-for="Password">New password</label>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="ConfirmPassword" class="form-control" type="password" aria-required="true" placeholder="Confirm Password"/>
                        <label asp-for="ConfirmPassword">Confirm new password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center gap-3 mt-5">
                        <button type="button" onclick="history.back()" class="btn btn-auth-secondary btn-lg w-50">
                            ← BACK
                        </button>
                        <button type="submit" class="btn btn-auth-main btn-lg w-50">
                            SUBMIT
                        </button>
                    </div>
                </form>
                <div asp-validation-summary="All" class="text-danger mt-3 small"></div>
            }
            else
            {
                <div class="text-center py-4">
                    <div class="mb-4">
                        <i class="bi bi-shield-check" style="font-size: 4rem; color: #ffcc00;"></i>
                    </div>
                    <h2 class="h4 fw-bold mb-3" style="color: #ffcc00; letter-spacing: 1px;">
                        PASSWORD RESET SUCCESSFULLY
                    </h2>
                    <p class="text-white-50 mb-5">
                        Your password has been updated. Please use your new password to log in to the system.
                    </p>

                    <div class="d-flex flex-column gap-3">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-auth-main py-2">LOGIN NOW</a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-auth-secondary py-2">RETURN HOME</a>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>