@model POWStudio.Models.Category

@{
    ViewData["Title"] = "— Add Category";
}

<div class="content-card">
    <form asp-controller="Game" asp-action="AddCategory" method="post">
        <div class="input-group mb-3">
            <span class="input-group-text">Name</span>
            <input asp-for="Name" type="text" class="form-control" placeholder="Name" aria-label="Name">
        </div>
        
        <button type="submit" class="btn btn-primary">Thêm Category</button>
    </form>
</div>
