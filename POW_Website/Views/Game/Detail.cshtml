<style>
.thumbnail-carousel .carousel-inner {
    overflow-x: auto; 
    overflow-y: hidden; 
    white-space: nowrap; 
    height: 120px; 
    display: block; 
}

.thumbnail-carousel .carousel-item {
    display: inline-block;
    width: auto;
}

.thumbnail-image {
    width: 200px; 
    height: 100px; 
    object-fit: cover; 
    margin-right: 8px; 
    cursor: pointer; 
    border: 2px solid transparent;
    transition: border-color 0.2s;
    border-radius: 4px;
    user-select: none;
}

.thumbnail-image:hover {
    border-color: #ffffff;
}

/* Modal */
#imageModal .modal-content {
    background-color: #000;
    border: none;
}

#imageModal .modal-dialog {
    max-width: none;
    width: 100%;
    margin: 0;
}

#imageModal .modal-body {
    background-color: #000;
    text-align: center;
}

#imageModal .carousel-item img {
    height: 90vh; 
    width: 100%;
    object-fit: contain;
    margin-top: 5vh; 
    display: block;
    user-select: none;
}

#imageModal .btn-close {
    filter: invert(1);
    opacity: 1;
}

.action-button {
     font-weight: bold;
     padding: 10px 25px;
     border-radius: 8px; /* Bo góc nhẹ */
 }

/* Đảm bảo Icon có kích thước phù hợp */
