@model POWStudio.Models.GameCategory

@{
    ViewBag.Title = "- Edit Game";
}

<div class="content-card">
    <div class="center-content-wrapper">
        <h1 class="mt-4">Admin Page tạo bởi Vyes</h1>
    </div>
</div>

<form asp-controller="Game" asp-action="EditGame" method="post">
    <input type="hidden" asp-for="GameId"/>
    <div class="input-group mb-3">
        <span class="input-group-text">Title</span>
        <input asp-for="Game.Title" type="text" class="form-control" placeholder="Title" aria-label="Title">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">Category</span>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" aria-label="Category"></select>
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">Slug</span>
        <input asp-for="Game.Slug" type="text" class="form-control" placeholder="Slug" aria-label="Slug">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">TittleImageUrl</span>
        <input asp-for="Game.TittleImageUrl" type="text" class="form-control" placeholder="TittleImageUrl"
               aria-label="TittleImageUrl">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">ShortDescription</span>
        <input asp-for="Game.ShortDescription" type="text" class="form-control" placeholder="ShortDescription"
               aria-label="ShortDescription">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">DetailedDescription</span>
        <input asp-for="Game.DetailedDescription" type="text" class="form-control" placeholder="DetailedDescription"
               aria-label="DetailedDescription">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">BgImageUrl</span>
        <input asp-for="Game.BgImageUrl" type="text" class="form-control" placeholder="BgImageUrl"
               aria-label="BgImageUrl">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">bPublic</span>
        <input asp-for="Game.bPublic" class="form-check-input"/>
        <label>Public</label>
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">TrailerUrl</span>
        <input asp-for="Game.TrailerUrl" type="text" class="form-control" placeholder="TrailerUrl"
               aria-label="TrailerUrl">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">ItchioUrl</span>
        <input asp-for="Game.ItchioUrl" type="text" class="form-control" placeholder="ItchioUrl" aria-label="ItchioUrl">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">SteamUrl</span>
        <input asp-for="Game.SteamUrl" type="text" class="form-control" placeholder="SteamUrl" aria-label="SteamUrl">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">EpicUrl</span>
        <input asp-for="Game.EpicUrl" type="text" class="form-control" placeholder="EpicUrl" aria-label="EpicUrl">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">FabUrl</span>
        <input asp-for="Game.FabUrl" type="text" class="form-control" placeholder="FabUrl" aria-label="FabUrl">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">Price</span>
        <input asp-for="Game.Price" type="number" class="form-control" placeholder="Price" aria-label="Price">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">DiscountPercent</span>
        <input asp-for="Game.DiscountPercent" type="number" class="form-control" placeholder="DiscountPercent"
               aria-label="DiscountPercent">
    </div>

    <button type="submit" class="button">Sua game</button>
</form>
