@model POWStudio.Models.GameCategory
@{
    ViewData["Title"] = "Add game";
    // Đảm bảo bạn có CSS Dark Mode và Josefin Sans đã nhúng
}

<div class="container py-5" style="max-width: 800px; margin-top: 100px">

    <h1 class="text-white fw-bold mb-5 text-center">
        <i class="bi bi-controller me-2"></i> Thêm Game Mới
    </h1>

    <form asp-controller="Admin" asp-action="AddGame" method="post">
        
        <h3 class="text-warning border-bottom border-warning pb-2 mb-4">Thông tin cơ bản</h3>
        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Game.Title" type="text" class="form-control bg-dark text-light rounded-0 border-secondary" placeholder="Tên Game"/>
                    <label asp-for="Game.Title" class="text-secondary">Tên Game</label>
                </div>
            </div>
            <div class="col-md-6">
                <label asp-for="CategoryId" class="form-label text-secondary d-block">Danh mục</label>
                @* <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select bg-dark text-light rounded-0 border-secondary"></select> *@
                <select name="CategoryIds" id="example-multi-select" data-placeholder="Select options"
                        multiple="multiple" data-multi-select>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Value">@category.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Game.Slug" type="text" class="form-control bg-dark text-light rounded-0 border-secondary" placeholder="Slug (URL thân thiện)"/>
                    <label asp-for="Game.Slug" class="text-secondary">Slug (URL thân thiện)</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Game.TitleImageUrl" class="form-control bg-dark text-light rounded-0 border-secondary" placeholder="URL ảnh tiêu đề"/>
                    <label asp-for="Game.TitleImageUrl" class="text-secondary">URL Ảnh Tiêu Đề</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Game.ReleaseDate" class="form-control bg-dark text-light rounded-0 border-secondary"
                           placeholder="Ngày ra mắt"/>
                    <label asp-for="Game.ReleaseDate" class="text-secondary">Ngày ra mắt</label>
                </div>
            </div>
        </div>

        <h3 class="text-warning border-bottom border-warning pb-2 mb-4 mt-5">Mô tả & Hình ảnh</h3>
        <div class="row g-3 mb-4">
            <div class="col-12">
                <div class="form-floating">
                    <textarea asp-for="Game.ShortDescription" class="form-control bg-dark text-light rounded-0 border-secondary" placeholder="Mô tả ngắn gọn" style="height: 100px"></textarea>
                    <label asp-for="Game.ShortDescription" class="text-secondary">Mô tả ngắn gọn</label>
                </div>
            </div>
            <div class="col-12">
                <div class="form-floating">
                    <textarea asp-for="Game.DetailedDescription" class="form-control bg-dark text-light rounded-0 border-secondary" placeholder="Mô tả chi tiết" style="height: 150px"></textarea>
                    <label asp-for="Game.DetailedDescription" class="text-secondary">Mô tả chi tiết</label>
                </div>
            </div>
            <div class="col-md-10">
                <div class="form-floating">
                    <input asp-for="Game.BgImageUrl" type="url" class="form-control bg-dark text-light rounded-0 border-secondary" placeholder="URL ảnh nền"/>
                    <label asp-for="Game.BgImageUrl" class="text-secondary">URL Ảnh Nền</label>
                </div>
            </div>
            <div class="col-md-2 d-flex align-items-center justify-content-center">
                <div class="form-check form-switch">
                    <input asp-for="Game.bPublic" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" style="width: 2.5em; height: 1.5em;"/>
                    <label class="form-check-label text-light ms-2" for="flexSwitchCheckDefault">Công khai</label>
                </div>
            </div>
        </div>

        <h3 class="text-warning border-bottom border-warning pb-2 mb-4 mt-5">Liên kết & Giá</h3>
        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Game.TrailerUrl" type="url" class="form-control bg-dark text-light rounded-0 border-secondary" placeholder="Trailer URL"/>
                    <label asp-for="Game.TrailerUrl" class="text-secondary">Trailer URL</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Game.Price" type="number" step="0.01" class="form-control bg-dark text-light rounded-0 border-secondary" placeholder="Giá (VNĐ/USD)"/>
                    <label asp-for="Game.Price" class="text-secondary">Giá</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Game.ItchioUrl" type="url" class="form-control bg-dark text-light rounded-0 border-secondary" placeholder="Itchio URL"/>
                    <label asp-for="Game.ItchioUrl" class="text-secondary">Itchio URL</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Game.DiscountPercent" type="number" min="0" max="100" class="form-control bg-dark text-light rounded-0 border-secondary" placeholder="Phần trăm giảm giá"/>
                    <label asp-for="Game.DiscountPercent" class="text-secondary">Giảm giá (%)</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Game.SteamUrl" type="url" class="form-control bg-dark text-light rounded-0 border-secondary" placeholder="Steam URL"/>
                    <label asp-for="Game.SteamUrl" class="text-secondary">Steam URL</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Game.EpicUrl" type="url" class="form-control bg-dark text-light rounded-0 border-secondary" placeholder="Epic URL"/>
                    <label asp-for="Game.EpicUrl" class="text-secondary">Epic URL</label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Game.FabUrl" type="url" class="form-control bg-dark text-light rounded-0 border-secondary" placeholder="Fab URL"/>
                    <label asp-for="Game.FabUrl" class="text-secondary">Fab URL (Liên kết khác)</label>
                </div>
            </div>
        </div>

        <div class="d-grid mt-5">
            <button type="submit" class="btn btn-warning btn-lg rounded-0 fw-bold">
                Add Game
            </button>
        </div>
        
    </form>
    
    <div asp-validation-summary="All" class="text-danger mt-4 text-center"></div>
</div>