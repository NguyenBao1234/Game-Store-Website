@model POWStudio.Models.Game

@{
    ViewBag.Title = "- Delete Game";
}


<div class="d-flex align-items-center justify-content-center vh-100" style="background-color: #000; color: #eee; font-family: 'Josefin Sans', sans-serif;">
    
    <div class="text-center p-5 rounded-0 border border-danger" style="max-width: 550px; width: 90%; background-color: #1a1a1a;">

        <i class="bi bi-exclamation-triangle-fill text-danger mb-4" style="font-size: 4rem;"></i>

        <h1 class="text-white fw-bold mb-3" style="font-size: 1.8rem;">
            Are you sure delete this game?
        </h1>
        
        <p class="text-warning mb-4 fw-bold p-2" style="background-color: #333;">
            @Model.Title
        </p>
        
        <p class="text-secondary small">
            Hành động này không thể hoàn tác. Dữ liệu Game sẽ bị mất vĩnh viễn.
        </p>

        <hr class="border-secondary my-4">

        <div class="d-flex justify-content-center gap-3 align-items-center"> 
    
            <form asp-controller="Admin" asp-action="DeleteGame" method="post" class="m-0">
                <button type="submit" class="btn btn-danger btn-lg px-5 rounded-0 fw-bold">
                    Delete
                </button>
            </form>

            <a class="btn btn-outline-light btn-lg px-5 rounded-0 fw-bold" 
               asp-controller="Admin" asp-action="Admin">
                Cancle
            </a>
    
        </div>
        
    </div>
</div>


