@model POWStudio.Models.ViewModels.ReportSaleVM
@{
    ViewBag.Title = "Sale Report";
}
<div class="container py-4" style="margin-top: 100px">
    <h2 class="text-white">Revenue Summary</h2>
    <hr class="text-secondary">

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card bg-info text-white border-0 shadow"> 
                <div class="card-body d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Total All-Time Revenue</h5>
                    <h3 class="revenue-value mb-0 text-light"><span id="all-time-revenue">@Model.AllTimeRevenue.ToString("C")</span></h3>
                </div>
            </div>
        </div>
    </div>

    <form asp-controller="Admin" asp-action="SaleReport">
        
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card bg-dark text-white border-secondary shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <h5 class="card-title me-auto mb-0">Daily Revenue</h5>
                    
                        <div class="input-group w-auto me-3">
                            <span class="input-group-text bg-secondary border-secondary text-white-50">Date:</span>
                            <input type="date" name="Date" class="form-control bg-dark text-white border-secondary" value="@Model.Date.ToString("yyyy-MM-dd")">
                        </div>
                    
                        <h3 class="revenue-value mb-0 text-success"><span>@Model.DateRevenue.ToString("C")</span></h3>
                        <input type="hidden" asp-for="DateRevenue" value="@Model.DateRevenue"/>
                        <button type="submit" name="ActionType" value="Daily" class="btn btn-sm btn-info ms-3">View</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card bg-dark text-white border-secondary shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <h5 class="card-title me-auto mb-0">Monthly Revenue</h5>
                    
                        <div class="input-group w-auto me-3">
                            <span class="input-group-text bg-secondary border-secondary text-white-50">Month:</span>
                            <input type="month" name="Month" class="form-control bg-dark text-white border-secondary" value="@Model.Month.ToString("yyyy-MM")">
                        </div>

                        <h3 class="revenue-value mb-0 text-warning"><span>@Model.MonthRevenue.ToString("C")</span></h3>
                        <input type="hidden" asp-for="MonthRevenue" value="@Model.MonthRevenue"/>
                        <button type="submit" name="ActionType" value="Monthly" class="btn btn-sm btn-info ms-3">View</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card bg-dark text-white border-secondary shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <h5 class="card-title me-auto mb-0">Yearly Revenue</h5>
                    
                        <div class="input-group w-auto me-3">
                            <span class="input-group-text bg-secondary border-secondary text-white-50">Year:</span>
                            <select class="form-select bg-dark text-white border-secondary" name="Year">
                                @foreach (var year in (List<int>)ViewBag.AvailableYears)
                                {
                                    <option value="@year" class="bg-dark">@year</option>
                                }
                            </select>
                        </div>
                    
                        <h3 class="revenue-value mb-0 text-danger"><span>@Model.YearRevenue.ToString("C")</span></h3>
                        <input type="hidden" asp-for="YearRevenue"/>
                        <button type="submit" name="ActionType" value="Yearly" class="btn btn-sm btn-info ms-3">View</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="mt-4 p-3 d-flex justify-content-end gap-3 rounded-0" style="background-color: #1a1a1a; border: 1px solid #333;">
        <a class="btn btn-warning btn-lg rounded-0 fw-bold" 
           asp-controller="Admin" asp-action="Order">
            <i class="bi bi-bag"></i> Order
        </a>
    </div>
</div>

<div class="vh-100"></div>
