@{
    ViewData["Title"] = "- Contact";
}
<style>
    .contact-page {
        height: 100vh;
        background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), 
                    url('/Image/Other/ThapRuaHN.jpg') no-repeat center center;
        background-size: cover;
        display: flex;
        justify-content: space-between; /* Đẩy nội dung ra 2 bên */
        align-items: center;
        padding: 0 8%; /* Khoảng cách từ mép màn hình vào */
        color: white;
    }

    /* Khối bên trái: Thông tin vị trí */
    .left-side {
        text-align: left;
        max-width: 300px;
    }

    /* Khối bên phải: Thông tin liên hệ */
    .right-side {
        text-align: right;
        max-width: 400px;
    }

    .sub-label {
        font-size: 0.8rem;
        letter-spacing: 4px;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.6);
        display: block;
        margin-bottom: 5px;
    }

    .big-text {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        line-height: 1.2;
    }

    .email-text {
        font-size: 1.4rem;
        color: #ffcc00; /* Màu vàng nhấn mạnh */
        text-decoration: none;
        font-weight: 300;
        border-bottom: 1px solid transparent;
        transition: border 0.3s;
    }

    .email-text:hover {
        border-bottom: 1px solid #ffcc00;
    }

    .caption {
        font-style: italic;
        font-weight: 300;
        margin-top: 10px;
        opacity: 0.8;
    }
</style>

<div class="contact-page">
    <div class="left-side">
        <span class="sub-label">Location</span>
        <h2 class="big-text">HANOI,<br/>VIETNAM</h2>
        <p class="caption">The heart of our inspiration.</p>
    </div>

    <div class="right-side">
        <span class="sub-label">Get in touch</span>
        <a href="mailto:powgamestd@gmail.com" class="email-text">
            powgamestd@gmail.com
        </a>
        <p class="caption">Cảm ơn bạn đã kết nối với POW.</p>
    </div>
</div>